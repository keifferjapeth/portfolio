<script>

    // Reveal on scroll
    const reveals = document.querySelectorAll('.reveal');
    
    const revealOnScroll = () => {
      reveals.forEach(el => {
        const rect = el.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        
        if (rect.top < windowHeight - 100) {
          el.classList.add('visible');
        }
      });
    };

    window.addEventListener('scroll', revealOnScroll);
    window.addEventListener('load', revealOnScroll);

    // Smooth scroll for nav links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Parallax effect for orbs
    let ticking = false;
    
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const scrollY = window.scrollY;
          const orbs = document.querySelectorAll('.orb');
          
          orbs.forEach((orb, index) => {
            const speed = 0.03 + (index * 0.01);
            const yOffset = scrollY * speed;
            orb.style.transform = `translateY(${yOffset}px)`;
          });
          
          ticking = false;
        });
        ticking = true;
      }
    });
  
  

// --- CPL Calculator (AED) ---
(function(){
  const budget = document.getElementById('cplBudget');
  const cpl = document.getElementById('cplTarget');
  const leadsEl = document.getElementById('cplLeads');
  const dailyEl = document.getElementById('cplDaily');
  const lpdEl = document.getElementById('cplLPD');
  const effEl = document.getElementById('cplEff');

  if(!budget || !cpl) return;

  const fmt = (n) => {
    if(!isFinite(n)) return '—';
    const rounded = Math.round(n * 100) / 100;
    return rounded.toLocaleString(undefined, { maximumFractionDigits: 2 });
  };

  const update = () => {
    const b = parseFloat(budget.value || '0');
    const target = Math.max(1, parseFloat(cpl.value || '1'));
    const leads = b / target;
    const daily = b / 30;
    const lpd = leads / 30;

    leadsEl.textContent = fmt(leads);
    dailyEl.textContent = 'AED ' + fmt(daily);
    lpdEl.textContent = fmt(lpd);

    // simple label, not a score
    if(target <= 45) effEl.textContent = 'High volume';
    else if(target <= 80) effEl.textContent = 'Balanced';
    else effEl.textContent = 'Selective';
  };

  budget.addEventListener('input', update);
  cpl.addEventListener('input', update);
  update();
})();

// --- Dual toggle logic (mobile): switch between System and Preview without removing content ---
(function(){
  const mq = window.matchMedia('(max-width: 640px)');
  const duals = document.querySelectorAll('article.t-item.dual');

  function applyDefault(article){
    const leftHasService = !!article.querySelector('.t-side.left .service-card');
    const rightHasService = !!article.querySelector('.t-side.right .service-card');
    const show = leftHasService ? 'left' : (rightHasService ? 'right' : 'left');
    article.classList.remove('dual-show-left','dual-show-right');
    article.classList.add(show === 'left' ? 'dual-show-left' : 'dual-show-right');

    const btns = article.querySelectorAll('.dual-btn');
    btns.forEach(b => b.classList.toggle('is-active', b.dataset.show === show));
  }

  function enable(){
    duals.forEach(article => {
      applyDefault(article);

      const btns = article.querySelectorAll('.dual-btn');
      btns.forEach(btn => {
        btn.addEventListener('click', () => {
          const show = btn.dataset.show;
          article.classList.remove('dual-show-left','dual-show-right');
          article.classList.add(show === 'left' ? 'dual-show-left' : 'dual-show-right');

          btns.forEach(b => b.classList.toggle('is-active', b === btn));
        });
      });
    });
  }

  function disable(){
    duals.forEach(article => {
      article.classList.remove('dual-show-left','dual-show-right');
      const btns = article.querySelectorAll('.dual-btn');
      btns.forEach(b => b.classList.remove('is-active'));
    });
  }

  function sync(){
    if(mq.matches) enable();
    else disable();
  }

  mq.addEventListener ? mq.addEventListener('change', sync) : mq.addListener(sync);
  window.addEventListener('load', sync);
  sync();
})();
</script>
</body>
</html>
